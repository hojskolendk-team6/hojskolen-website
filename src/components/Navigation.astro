<header>
<nav>
    <a id="logo" href="/">HØJSKOLEDK</a>


  
    <ul class="menu">
      <li><a href="/">Rejsekalender</a></li>
      <li><a href="/">Højskoleophold</a></li>
      <li><a href="/">Sommerhøjskole</a></li>
      <li><a href="/">Om os</a></li>
      <li><a href="/">Kontakt os</a></li>
      <li><a href="/">Infomøder</a></li>
    </ul>

    
    <a href="/bestil-rejse" class="cta-btn">Bestil rejse</a>

  
    <button class="burger">
        <span class="line"></span>
        <span class="line"></span>
        <span class="line"></span>  
    </button>
  </nav>
</header>

<style>
header {
  padding: 2rem 2rem 0rem 2rem;
  background-color: transparent;
  color: black;
}

#logo  {
  color: #752727;
  font-weight: bold;
  text-decoration: none;
  font-size: 1.5rem;
  rotate: -3deg;
}
#logo a:hover {
  color: #923e3e;
}

nav {
  display: flex;
  align-items: center;
  gap: 2rem; 
}

.menu {
  display: flex;
  list-style: none;
  gap: 2rem; 
  margin: 0 auto;
  padding: 0;
}

.menu a {
  color: black;
  text-decoration: none;
  font-weight: bold;
}

.menu a:hover {
  color: #752727;
}


.burger {
  display: none; 
  flex-direction: column;
  gap: 0.25rem;
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
}

.burger .line {
  width: 25px;
  height: 3px;
  background-color: black;
  display: block;
}

.cta-btn {
  padding: 0.5rem 1rem;
  background-color: #752727;
  color: white;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  text-decoration: none;
  font-weight: bold;
}

.cta-btn:hover {
  background-color: #923e3e;
}


@media screen and (max-width: 800px) {
  .menu {
    display: none;
  }
  .burger {
    display: block;
    background-color: transparent;
    border: 0;
  }
  .burger.active .line:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
    transition: 0.2s linear;
  }

  .burger.active .line:nth-child(2) {
    opacity: 0;
    transition: 0.15s linear;
  }

  .burger.active .line:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
    transition: 0.2s linear;
  }

  nav.active .menu {
    display: block;
    background-color: #E9E7D7;
    position: absolute;
    top: 60px;
    left: 0;
    width: 100%;
    z-index: 1;
  }

  nav.active .menu li {
    margin: 10px 20px;
  }

  nav.active .menu a {
    font-size: 24px;
  }

  .cta-btn {
    display: none;
}
}

</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const burger = document.querySelector(".burger");
    const nav = document.querySelector("nav");

    if (burger && nav) {
      burger.addEventListener("click", () => {
        burger.classList.toggle("active");
        nav.classList.toggle("active");
      });
    }
  });
</script>