---
const { dage, h3, byline, image, cardnumber, poptext } = Astro.props;
---

<article class={`grid_1-1-1 ${cardnumber}`} style={`background-image: url(${image});`}>
  <div class="card">
    <p class="dage">{dage}</p>

    
    <div class="bund">
      {poptext && <p class="popop">{poptext}</p>}
      <h3 class="lande">{h3}</h3>
      <p class="afgange">{byline}</p>
    </div>
  </div>
</article>

<style>
.grid_1-1-1 {
  font-family: "Dela Gothic One", sans-serif;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  border-radius: 10px;
  margin: 10px;
}

.popop{
  background-color: rgb(90, 157, 199);
  padding: 5px;
  border-radius: 5px;
  color: #fff;
  font-size: 12px;
  width: fit-content;
}

/* vigtigt: ingen fast width */
.card {
height: 16rem;
width: 14rem;
  padding: 25px;
  display: flex;
  flex-direction: column;
}

.card p {
  margin: 0;}

.bund { margin-top: auto; }

.dage {
  background-color: #CE5501;
  width: 80px;
  border-radius: 4px;
  padding: 6px;
  margin: 10px;
  text-align: center;
  color: #fff;
  font-size: 12px;
}

.lande { color: #fff; font-size: 28px; margin-bottom: 6px; }
.afgange { color: #fff; font-size: 18px; }

.nummer1{grid-column: 1/3;}
.nummer2{grid-column: 3/5;}
.nummer3{grid-column: 5/7;}

.nummer4{
  grid-row: 2/3;
  grid-column: 1/4;
}

.nummer5{
  grid-row: 2/3;
  grid-column: 4/8;
}
</style>
